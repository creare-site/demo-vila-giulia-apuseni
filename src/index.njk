layout : layouts/base.njk
---

	<!-- Intro -->
	<section class="intro">
		<header>
			<h1>
				<a href="{{ data.product }}">{{ data.app_title }}</a>
			</h1>
			<p>
				{{ data.app_subtitle }}
			</p>
			<ul class="actions">
				<li><a href="#first" class="arrow scrolly"><span class="label">Mai Mult</span></a></li>
			</ul>
		</header>
		<div class="content">
			<span class="image fill" data-position="center"><img src="images/pic01.jpg" alt="" /></span>
		</div>
	</section>

	<!-- Section -->
	<section id="first">
		<header>
			<h2>
				Despre noi
			</h2>
		</header>
		<div class="content">
			<p>
				<strong>Vila Giulia</strong> este un loc in care va veti simti cu siguranta ca si acasa! Vila este situata la 5 km de partiile de la Vartop si la 3 km de centrul orasului Arieseni. 
				Pensiunea se afla intr-un loc pitoresc, iar aerul proaspat si murmurul cristalin al raului din fata vilei completeaza peisajul montan!
			</p>
			
			<span class="image main"><img src="images/pic02.jpg" alt="" /></span>
		</div>
	</section>

				<!-- Section -->
